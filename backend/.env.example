# ===========================================
# MediMatch Backend Environment Variables
# ===========================================

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/medimatch

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# 외부 API 키 (공공데이터포털)
# https://www.data.go.kr/
# ===========================================

# 공공데이터포털 통합 API 키
DATA_GO_KR_API_KEY=your-data-go-kr-api-key

# 건강보험심사평가원 API (병원/약국 정보)
HIRA_API_KEY=your-hira-api-key

# 국토교통부 API (부동산 정보)
MOLIT_API_KEY=your-molit-api-key

# 소상공인시장진흥공단 API (상권 정보)
SEMAS_API_KEY=your-semas-api-key

# 건축물대장 API
BUILDING_API_KEY=your-building-api-key

# 상권 정보 API
COMMERCIAL_API_KEY=your-commercial-api-key

# ===========================================
# 카카오 API
# https://developers.kakao.com/
# ===========================================

# 카카오 지도 API
KAKAO_MAP_API_KEY=your-kakao-map-api-key

# 카카오 OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:3000/api/auth/callback/kakao

# ===========================================
# Google OAuth
# https://console.cloud.google.com/
# ===========================================

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# ===========================================
# Naver OAuth
# https://developers.naver.com/
# ===========================================

NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:3000/api/auth/callback/naver

# ===========================================
# 토스 페이먼츠
# https://developers.tosspayments.com/
# ===========================================

# 테스트 키 (개발용)
TOSS_CLIENT_KEY=test_ck_D5GePWvyJnrK0W0k6q8gLzN97Eoq
TOSS_SECRET_KEY=test_sk_zXLkKEypNArWmo50nX3lmeaxYG5R

# 라이브 키 (운영용) - 절대 커밋하지 마세요!
# TOSS_CLIENT_KEY=live_ck_xxx
# TOSS_SECRET_KEY=live_sk_xxx

# ===========================================
# 이메일 (SMTP)
# ===========================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@medimatch.kr
SMTP_FROM_NAME=MediMatch

# ===========================================
# 푸시 알림 (Firebase)
# https://console.firebase.google.com/
# ===========================================

FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# ===========================================
# Slack 알림 (내부용)
# ===========================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# ===========================================
# Frontend URL
# ===========================================

FRONTEND_URL=http://localhost:3000

# ===========================================
# Redis (캐싱, 세션)
# ===========================================

REDIS_URL=redis://localhost:6379

# ===========================================
# Celery (백그라운드 작업)
# ===========================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# Application Settings
# ===========================================

APP_NAME=MediMatch
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
API_V1_PREFIX=/api/v1

# ===========================================
# CORS Settings
# ===========================================

CORS_ORIGINS=["http://localhost:3000","https://medimatch.kr","https://www.medimatch.kr"]

# ===========================================
# Logging & Monitoring
# ===========================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (에러 트래킹)
SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# Rate Limiting
# ===========================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_ANONYMOUS=30
RATE_LIMIT_AUTHENTICATED=100
