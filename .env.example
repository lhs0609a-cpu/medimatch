# =============================================================================
# MediMatch Platform - Environment Variables
# =============================================================================

# Database
DATABASE_URL=postgresql+asyncpg://medimatch:medimatch_password@localhost:5432/medimatch
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Public Data APIs (https://www.data.go.kr)
HIRA_API_KEY=your-hira-api-key
BUILDING_API_KEY=your-building-api-key
COMMERCIAL_API_KEY=your-commercial-api-key
MOIS_API_KEY=your-mois-api-key

# Map APIs
KAKAO_MAP_API_KEY=your-kakao-map-api-key
NAVER_MAP_API_KEY=your-naver-map-api-key

# AI APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=medimatch-files

# Payment (Toss Payments)
TOSS_CLIENT_KEY=your-toss-client-key
TOSS_SECRET_KEY=your-toss-secret-key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_KAKAO_MAP_KEY=your-kakao-js-key
